@{
  Layout = "_Layout";
}


@model Pierres.Models.Treat

<h2>Add a Treat</h2>

<h4>Flavor to the Treat: @Html.DisplayFor(model => model.TreatType)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TreatTypeId)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" />
}
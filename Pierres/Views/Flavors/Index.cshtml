@{ 
  Layout = "_Layout";
}
@using Pierres.Models;

<h1>Flavors:</h1>
@if (@Model.Count == 0)
{
  <h3>No flavors have been added</h3>
}
else
@foreach (Flavor flavor in Model)
{
 @Html.ActionLink($"{flavor.FlavorType}", "Details", new { id = flavor.FlavorId })
  <br>
}
<p>@Html.ActionLink("Back to list", "Home", "Index")</p>